<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/location_controls_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:focusable="true"
    android:gravity="top"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/location_circle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/location_circle"
        android:visibility="visible" />

    <ImageButton
        android:id="@+id/location_current_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="@dimen/card_item_padding"
        android:layout_marginTop="@dimen/card_item_padding"
        android:layout_weight="1"
        android:background="@null"
        android:onClick="onCurrentLocation"
        android:src="@drawable/ic_myloc"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/location_pin_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/location_pin_height_padding"
        android:src="@drawable/icon_action_map" />

</FrameLayout>
